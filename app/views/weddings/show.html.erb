
<div class="header">
  <div class="header-text">
    We are getting married!
  </div>
  
  <% @wedding.number_guests = 0 %>
  <% @wedding.guests.each do |guest| %>
    <% unless guest.nil? %>
      <% if guest.is_attending %>
        <% number_people = guest.number_people.to_i + 1 %>
        <% @wedding.number_guests = number_people + @wedding.number_guests %>
      <% end %>
    <% end %>
  <% end %>

  <div class="num-guest">
    <%= pluralize(@wedding.number_guests, "guest") %>
  </div>

</div>


<p id="notice"><%= notice %></p>

<div class="wedding-date">
  <%= @wedding.date %>
</div>

<div class="couples">
  <%= @wedding.bride_name %>
  <span class="heartbeat"></span>
  <%= @wedding.groom_name %>
</div>


<canvas id="myCanvas" width="578" height="250"></canvas>  



<div id="myGallery">
   <% @wedding.images.each do |img| %>
    <% if img == @wedding.images.first %>
      <%= image_tag img.url, :class => 'active' %>
    <% else %>
      <%= image_tag img.url %>
    <% end %>
  <% end %>
</div>


<div class="heart-shape">
  Hello World!
</div>

<div class="love-story">
  <strong>Love Story: </strong>
  <%= @wedding.love_story %>
</div>



<% if @current_user.present? %>
  <% unless @wedding.user.nil? %>
    <% if @current_user.name == @wedding.user.name %>
      
      <%= link_to 'Invite Guests', new_wedding_email_path(@wedding), class: 'invite-guests' %>
      
    <% end %>
  <% end %>
<% end %>

<button id="show-guests">Click here to see who is coming</button>

<div class="guest-lists">
  <% @wedding.guests.each do |guest| %>
    <% unless guest.nil? %>
      <p>
        <strong><%= link_to guest.full_name, edit_wedding_guest_path(@wedding, guest) %></strong>
        ( 
        <%= guest.relationship %> 
        )
        + 
        <%= (guest.number_people.to_i) %> 
        : 
        <%= guest.greeting %>
        <%= link_to 'Remove Registration', guest_path(guest), method: :delete, data: { confirm: "Are you sure you don't want to come?" }, class: 'btn btn-primary btn-xs' %>
      </p>
    <% end %>
  <% end %>
</div>

<div class="location">
  <div class="map-canvas"></div>
</div>


<% unless @wedding.user.nil? %>
  <div class="user-name">
    <p><strong>User: </strong>
    <%= @wedding.user.name %></p>
  </div>
<% end %>


<%= link_to 'Back', weddings_path,  class: 'btn btn-primary btn-xs' %>

<% if @current_user.present? %>
  <% unless @wedding.user.nil? %>
    <% if @current_user.name == @wedding.user.name %>
      <%= link_to "Update", edit_wedding_path(@wedding), class: 'btn btn-primary btn-xs' %> 
      <%= link_to 'Destroy', wedding_path(@wedding), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
<% end %>



