<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Relationship</th>
      <th>Is attending</th>
      <th>Wedding ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.full_name %></td>
        <td><%= guest.relationship %></td>
        <td><%= guest.is_attending %></td>
        <% unless guest.weddings.nil? %>
          <% guest.weddings.each do |wedding| %>
            <td><%= wedding.id %></td>
          <% end %>
        <% end %>

        <td><%= link_to 'Show', guest, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
