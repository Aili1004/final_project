<%= form_for [@wedding, @guest] do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @wedding.nil? %>
    <h1>Wedding attending: </h1>
    <h3><%= @wedding.bride_name %> & <%= @wedding.groom_name %></h3>
  <% end %>

  <div class="question">
    <%= f.text_field :full_name, required: true %>
    <%= f.label :full_name %><br>
  </div>
  
  <div class="question">
    <%= f.text_field :relationship, required: true %>
    <%= f.label :relationship %><br>
  </div>
  <div class="question">
    <%= f.text_field :greeting, required: true %>
    <%= f.label :greeting %><br>
  </div>

  <div class="question">
    <%= f.check_box :is_attending%>
    <%= f.label :is_attending %><br>
  </div>


  <div class="question">
    <%= f.text_field :number_people, required: true %>
    <label>Number of extra people</label>
  </div>  

  <button>Submit</button>

<% end %>
