
<div class="basic-grey">
	<h1>User Login</h1>
</div>

<div class="basic-grey">
	<%= form_tag '/login' do %>
		<p>
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</p>

		<p>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</p>

		<p>
			<div class="button">
				<%= submit_tag 'Login' %>
			</div>
		</p>
	<% end %>
</div>

<%= link_to "Don't have an account? Click here to sign up!", new_user_path %>
